<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuDescActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_menuimg"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginBottom="-20dp"
            android:background="@drawable/bottom_border"
            android:orientation="vertical">

            <TextView
                style="@style/boldtext"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:text="@string/menuhelper"
                android:textColor="@color/white" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/iv_menuimage"
                    android:layout_width="250dp"
                    android:layout_height="230dp"
                    android:background="@drawable/item_border"
                    android:backgroundTint="@color/colorPrimary"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_menuimg"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="50dp">

                <TextView
                    android:id="@+id/tv_menuname"
                    style="@style/notosansboldtext"
                    android:layout_marginRight="15dp"
                    android:text="MenuName"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tv_spicy"
                    style="@style/boldtext"
                    android:textColor="#FF3636"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:id="@+id/iv_spicy"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_menunameEng"
                style="@style/boldtext"
                android:text="english menu name"
                android:textSize="25dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_mouth" />

                <TextView
                    android:id="@+id/tv_pronunciation"
                    style="@style/mediumtext"
                    android:layout_marginLeft="5dp"
                    android:text="pronunciation"
                    android:textColor="@color/grey"
                    android:textSize="20dp" />
            </LinearLayout>

            <TextView
                style="@style/boldtext"
                android:layout_marginTop="30dp"
                android:text="WHAT IS IT?"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tv_menudesc"
                style="@style/mediumtext"
                android:textColor="@color/grey"
                android:textSize="20dp"
                android:layout_marginTop="3dp"
                android:lineSpacingExtra="2dp"/>

            <TextView
                style="@style/boldtext"
                android:layout_marginTop="20dp"
                android:text="WHAT'S IN IT?"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tv_menuingredi"
                style="@style/mediumtext"
                android:textColor="@color/grey"
                android:textSize="20dp"
                android:layout_marginTop="3dp"
                android:lineSpacingExtra="2dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    style="@style/boldtext"
                    android:text="Religion"
                    android:textColor="@color/black"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/tv_religion"
                    style="@style/mediumtext"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:textSize="18dp"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp">

                <TextView
                    style="@style/boldtext"
                    android:text="Vegan"
                    android:textColor="@color/black"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/tv_vegan"
                    style="@style/mediumtext"
                    android:textColor="@color/grey"
                    android:textSize="18dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>